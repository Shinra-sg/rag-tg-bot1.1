{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "noEmit": true,                             // ✅ нужно для использования .mts
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "include": ["src"]
}